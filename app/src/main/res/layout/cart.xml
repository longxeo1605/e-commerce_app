<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/shop_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="12dp"
            android:background="@color/red"
            android:padding="5dp"
            android:text="Shop Mall"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="85dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="12dp"
            android:text="Iphone chính hãng VN"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="12dp"
            android:text="Hoàn Thành"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/shop_mall"
            android:layout_margin="6dp"
            android:src="@drawable/product_iphone15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/productName"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="13dp"
            android:layout_marginBottom="100dp"
            android:layout_toRightOf="@id/imgProduct"
            android:text="Iphone 15 Pro/Pro Max Navi"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="100dp"
            android:text="x1"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/seven_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="65dp"
            android:layout_toEndOf="@+id/imgProduct"
            android:background="@drawable/border"
            android:text="7 ngày trả hàng"
            android:textColor="@color/red"
            android:padding="2dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="65dp"
            android:text="28.000.000 đồng"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/DonHangGiaoThanhCong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="40dp"
            android:text="Đơn Hàng Giao Thành Công"
            android:textSize="9sp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="117dp"
            android:layout_marginBottom="40dp"
            app:srcCompat="@drawable/icons8_truck_50" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp"
            android:text="Đánh giá ngày và nhận Voucher ưu đãi!    --->"
            android:textSize="9sp"
            android:textColor="@color/red"/>

        <Button
            android:id="@+id/btDanhGia"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"
            android:backgroundTint="#FF0000"
            android:text="Đánh Giá"
            android:textSize="10sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>